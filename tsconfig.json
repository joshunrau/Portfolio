{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/typing"]
  },
  "include": ["src/**/*", "webpack.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  }
}
